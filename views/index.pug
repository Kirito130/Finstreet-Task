doctype html
html(lang='en')
   head
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible' content='IE=edge')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      title Hodlinfo
      link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
      link(rel='stylesheet' href='style.css')
   body
      header#head
         nav.navbar.navbar-expand-md.navbar-dark
            .row.container-fluid
               a.col.navbar-brand(href='#')
                  img(src='./img/HODLINFO.png' alt='Hodlinfo Logo')
                  h6
                     | Powered By 
                     span Finstreet
               ul.col.justify-content-center.navbar-nav
                  li.nav-item.dropdown
                     a#dropdown04.btn.nav-button.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') INR
                     ul.dropdown-menu(aria-labelledby='dropdown04')
                        li
                           a.dropdown-item(href='#') INR
                  li.nav-item.dropdown
                     a#dropdown04.btn.nav-button.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') BTC
                     ul.dropdown-menu(aria-labelledby='dropdown04')
                        li
                           a.dropdown-item(href='#') BTC
                  li.nav-item
                     a.btn.nav-button.nav-link(href='#') BUY BTC
               .col.justify-content-center.navbar-nav
                  a.btn.telegram(href='#')
                     img(src='./img/telegram.png' alt='Telegram Logo')
                     |  Connect Telegram
      .row.cont.mx-4
         .col-2.percent
            | 0.67 % 
            span.spans 5 Mins
         .col-2.percent
            | 1.54 % 
            span.spans 1 Hour
         .col-4.best
            span.spanUp Best Price to Trade
            |  ₹ 48,21,942 
            span.spanDown Average BTC/INR net price including commission
         .col-2.percent
            | 8.56 % 
            span.spans 1 Day
         .col-2.percent
            | 17.27 % 
            span.spans 7 Days
      .cont
         a(href='#')
            img(src='./img/Finstreet1.png' alt='Finstreet Image')
      .apitable
         table
            thead
               tr.row.cols
                  th.col-1.colst #
                  th.col-1 Platform
                  th.col-3 Last Traded Price
                  th.col-3 Buy / Sell Price
                  th.col-2 Volume
                  th.col-2 Base Unit
            tbody
               each hodlinfo, i in hodlinfos
                  tr.row.cols
                     th.col-1.colst= i+1
                     td.col-1= hodlinfo.name
                     td.col-3 ₹ #{hodlinfo.last}
                     td.col-3 ₹ #{hodlinfo.buy} / ₹ #{hodlinfo.sell}
                     td.col-2= hodlinfo.volume
                     td.col-2= hodlinfo.base_unit
      .cont2
         a(href='#')
            img.algo(src='./img/Finstreet2.png' alt='Algorand Image')
      hr(style='color: #808288; height: 0.1em;')
      footer.foot
         .row
            .col-4
               pre.inline
                  a(href="#") Copyright © 2019    
                  a(href="#") HodlInfo.com     
                  a(href="#") Developed By 
                     span QuadBTech   
            .foot-end.col-8
               a(href='#') Support
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
